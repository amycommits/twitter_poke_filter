<p id="notice"><%= notice %></p>

<h1>Area Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Lower left latitude</th>
      <th>Lower left longitude</th>
      <th>Upper right latitude</th>
      <th>Upper right longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @area_notifications.each do |area_notification| %>
      <tr>
        <td><%= area_notification.name %></td>
        <td><%= area_notification.latitude %></td>
        <td><%= area_notification.longitude %></td>
        <td><%= area_notification.lower_left_latitude %></td>
        <td><%= area_notification.lower_left_longitude %></td>
        <td><%= area_notification.upper_right_latitude %></td>
        <td><%= area_notification.upper_right_longitude %></td>
        <td><%= link_to 'Show', area_notification %></td>
        <td><%= link_to 'Edit', edit_area_notification_path(area_notification) %></td>
        <td><%= link_to 'Destroy', area_notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

